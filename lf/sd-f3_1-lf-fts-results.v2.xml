<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>South Sudan:  F3-1 - Lymphatic Filariasis</h:title>
    <model>
      <instance>
        <sd-f3_1-lf-fts-results.v2 id="sd-f3-1-lf-fts-results" version="3">
          <d_recorder_id/>
          <d_village_id/>
          <d_particiant_id_generated/>
          <d_particiant_id_generated2/>
          <d_fts/>
          <d_blood_spot_collected/>
          <d_reason_not_collected/>
          <d_loa_available/>
          <d_remarks/>
          <d_saved_at/>
          <meta>
            <instanceID/>
          </meta>
        </sd-f3_1-lf-fts-results.v2>
      </instance>
      <bind constraint="regex(.,'^[0-9]{2}$')" jr:constraintMsg="Invalid. Recorder ID code is 2 numbers long." nodeset="/sd-f3_1-lf-fts-results.v2/d_recorder_id" required="true()" type="int"/>
      <bind constraint="regex(.,'^[0-9]{3}$')" jr:constraintMsg="Invalid. Recorder ID code is 3 numbers long." nodeset="/sd-f3_1-lf-fts-results.v2/d_village_id" required="true()" type="int"/>
      <bind constraint="regex(., '^[0-9]{3}-[0-9]{4}$')" jr:constraintMsg="The format must be 123-1234" nodeset="/sd-f3_1-lf-fts-results.v2/d_particiant_id_generated" required="true()" type="text"/>
      <bind constraint=".= /sd-f3_1-lf-fts-results.v2/d_particiant_id_generated " jr:constraintMsg="The ID is not equal to the generated ID" nodeset="/sd-f3_1-lf-fts-results.v2/d_particiant_id_generated2" required="true()" type="text"/>
      <bind nodeset="/sd-f3_1-lf-fts-results.v2/d_fts" required="true()" type="select1"/>
      <bind nodeset="/sd-f3_1-lf-fts-results.v2/d_blood_spot_collected" required="true()" type="select1"/>
      <bind nodeset="/sd-f3_1-lf-fts-results.v2/d_reason_not_collected" relevant=" /sd-f3_1-lf-fts-results.v2/d_blood_spot_collected =&quot;No&quot;" required="true()" type="text"/>
      <bind nodeset="/sd-f3_1-lf-fts-results.v2/d_loa_available" required="true()" type="select1"/>
      <bind nodeset="/sd-f3_1-lf-fts-results.v2/d_remarks" required="false()" type="text"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/sd-f3_1-lf-fts-results.v2/d_saved_at" type="dateTime"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/sd-f3_1-lf-fts-results.v2/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_recorder_id">
      <label>Recorder ID</label>
      <hint>2 digit code assigned to you</hint>
    </input>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_village_id">
      <label>Enter the village code</label>
      <hint>3 digit code assigned to this village</hint>
    </input>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_particiant_id_generated">
      <label>Enter unique ID from the diagnostic test (must be entered as 123-1234 digit only with dashes)adminstered, including FTS and Dry Blood Spot tests.</label>
    </input>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_particiant_id_generated2">
      <label>Repeat unique ID (must be entered as 123-1234 digit only with dashes)</label>
    </input>
    <select1 ref="/sd-f3_1-lf-fts-results.v2/d_fts">
      <label>FTS result</label>
      <item>
        <label>1 Positive</label>
        <value>1_Positive</value>
      </item>
      <item>
        <label>2 Negative</label>
        <value>2_Negative</value>
      </item>
      <item>
        <label>3 Not tested</label>
        <value>3_Not_tested</value>
      </item>
    </select1>
    <select1 ref="/sd-f3_1-lf-fts-results.v2/d_blood_spot_collected">
      <label>Was dried blood spot collected?</label>
      <item>
        <label>1 Yes</label>
        <value>Yes</value>
      </item>
      <item>
        <label>2 No</label>
        <value>No</value>
      </item>
    </select1>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_reason_not_collected">
      <label>Why was blood spot not collected?</label>
    </input>
    <select1 ref="/sd-f3_1-lf-fts-results.v2/d_loa_available">
      <label>Was blood smear for loa loa done?</label>
      <item>
        <label>1 Yes</label>
        <value>Yes</value>
      </item>
      <item>
        <label>2 No</label>
        <value>No</value>
      </item>
    </select1>
    <input ref="/sd-f3_1-lf-fts-results.v2/d_remarks">
      <label>Remarks</label>
    </input>
  </h:body>
</h:html>
