<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>South Sudan:  F8 -Urine test results Form SCH/STH</h:title>
    <model>
      <instance>
        <sd-f8-urine-results.v2 id="sd-f8-urineresult" version="3">
          <d_recorder_id/>
          <d_school_id/>
          <d_particiant_id_generated/>
          <d_particiant_id_generated2/>
          <d_sh_egp_10ml/>
          <d_haematuria/>
          <d_grading_negative/>
          <d_grading_trace/>
          <d_grading_one_plus/>
          <d_grading_two_plus/>
          <d_grading_three_plus/>
          <d_cca_neg/>
          <d_cca_pos/>
          <d_ca_not_tested/>
          <d_comments/>
          <meta>
            <instanceID/>
          </meta>
        </sd-f8-urine-results.v2>
      </instance>
      <bind constraint="regex(.,'^[0-9]{2}$')" jr:constraintMsg="Invalid. Recorder ID code is 2 numbers long." nodeset="/sd-f8-urine-results.v2/d_recorder_id" required="true()" type="int"/>
      <bind constraint="regex(.,'^[0-9]{3}$')" jr:constraintMsg="Invalid. Recorder ID code is 3 numbers long." nodeset="/sd-f8-urine-results.v2/d_school_id" required="true()" type="int"/>
      <bind constraint="regex(., '^[0-9]{3}-[0-9]{4}$')" jr:constraintMsg="The format must be 123-1234" nodeset="/sd-f8-urine-results.v2/d_particiant_id_generated" required="true()" type="text"/>
      <bind constraint=".= /sd-f8-urine-results.v2/d_particiant_id_generated " jr:constraintMsg="The ID is not equal to the generated ID" nodeset="/sd-f8-urine-results.v2/d_particiant_id_generated2" required="true()" type="text"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_sh_egp_10ml" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_haematuria" type="select1"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_grading_negative" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_grading_trace" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_grading_one_plus" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_grading_two_plus" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_grading_three_plus" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_cca_neg" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_cca_pos" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_ca_not_tested" type="decimal"/>
      <bind nodeset="/sd-f8-urine-results.v2/d_comments" type="text"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/sd-f8-urine-results.v2/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/sd-f8-urine-results.v2/d_recorder_id">
      <label>Recorder ID</label>
      <hint>2 digit code assigned to you</hint>
    </input>
    <input appearance="3 digit code assigned to this school" ref="/sd-f8-urine-results.v2/d_school_id">
      <label>Enter the school code</label>
      <hint>Enter the school code</hint>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_particiant_id_generated">
      <label>Enter unique ID from the diagnostic test (must be entered as 123-1234 digit only with dashes)adminstered, including FTS and Dry Blood Spot tests.</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_particiant_id_generated2">
      <label>Repeat unique ID (must be entered as 123-1234 digit only with dashes)</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_sh_egp_10ml">
      <label>SH egp 10 ml</label>
    </input>
    <select1 ref="/sd-f8-urine-results.v2/d_haematuria">
      <label>Haematuria (urine colour)</label>
      <item>
        <label>1 Bloody</label>
        <value>1_Bloody</value>
      </item>
      <item>
        <label>2 Amber/cloudy</label>
        <value>2_Amber/cloudy</value>
      </item>
      <item>
        <label>3 Amber/clear</label>
        <value>3_Amber/clear</value>
      </item>
      <item>
        <label>4 Pale yellow/clear</label>
        <value>4_Pale_yellow/clear</value>
      </item>
      <item>
        <label>5 Pale yellow/cloudy</label>
        <value>5_Pale_yellow/cloudy</value>
      </item>
    </select1>
    <input ref="/sd-f8-urine-results.v2/d_grading_negative">
      <label>Microhaematuria grading – Negative</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_grading_trace">
      <label>Microhaematuria grading – Trace</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_grading_one_plus">
      <label>Microhaematuria grading – +</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_grading_two_plus">
      <label>Microhaematuria grading – ++</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_grading_three_plus">
      <label>Microhaematuria grading – +++</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_cca_neg">
      <label>POC-CCA Results Negative</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_cca_pos">
      <label>POC-CCA Results Positives</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_ca_not_tested">
      <label>POC-CCA Results Not tested</label>
    </input>
    <input ref="/sd-f8-urine-results.v2/d_comments">
      <label>Comments</label>
    </input>
  </h:body>
</h:html>
